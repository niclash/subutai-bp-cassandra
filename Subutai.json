{
  "name": "${EnvironmentName}",
  "description": "Apache Cassandra",
  "version": "0.2.1",
  "author": "https://github.com/niclash",
  "ssh-key": "niclas",
  "containers": [
    {
      "hostname": "cassandra",
      "template": "debian-buster",
      "peer-criteria": "SRV-GROUP",
      "peer-layout": "cassandra",
      "size": "HUGE",
      "port-mapping": [
        {
          "protocol": "tcp",
          "domain": "${DomainName}",
          "internal-port": "9092",
          "external-port": "9092"
        }
      ]
    }
  ],
  "peer-layouts": [
    {
      "name": "cassandra",
      "peer-count": "${Instances}",
      "container-per-peer": "1"
    }
  ],
  "peer-criteria": [
    {
      "name": "SRV-GROUP",
      "max-price": "25"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/niclash/subutai-bp-cassandra/archive/master.zip",
    "ansible-playbook": "ansible.yml",
    "extra-vars": [
      {
        "key": "cassandra_cluster_name",
        "value": "${ClusterName}"
      },
      {
        "key": "cassandra_seeds",
        "value": "${CassandraSeeds}"
      }
    ],
    "groups": [
      {
        "name": "cassandra",
        "hostnames": [
          "cassandra"
        ]
      }
    ]
  },
  "user-variables": {
    "EnvironmentName": {
      "description": "The name of the environment to create.",
      "type": "string",
      "validation": "[a-zA-Z_][a-zA-Z0-9_]*",
      "default": "cassandra"
    },
    "Instances": {
      "description": "Number of Cassandra instances to be run. One instance per peer. Recommended a prime number to alleviate problems around split-brain syndrome",
      "type": "int",
      "validation": "[123455789][0123455789]*",
      "default": "5"
    },
    "DomainName": {
      "description": "Domain name of the publicly reachable Cassandra endpoint.",
      "type": "domain",
      "validation": ".*",
      "default": ""
    },
    "ClusterName": {
      "description": "Name of the Cassandra cluster.",
      "type": "string",
      "validation": ".*",
      "default": "cassandra-cluster"
    },
    "CassandraSeeds": {
      "description": "Known host names that the members of the Cassandra cluster will try to connect to during startup to establish the topology.",
      "type": "string",
      "validation": ".*",
      "default": ""
    }
  }
}